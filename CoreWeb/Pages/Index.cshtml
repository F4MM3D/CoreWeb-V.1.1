@page
@model CoreWeb.Pages.IndexModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CoreWeb</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: { 'sans': ['Inter', 'sans-serif'] },
                    colors: {
                        'brandPurple': '#9B5EE6',
                        'brandBlue': '#3B82F6'
                    }
                }
            }
        }
    </script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

            body.bg-dark-mode {
                background-color: #111827;
                background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.05) 1px, transparent 0);
                background-size: 20px 20px;
            }

        .validation-error {
            color: #F87171; /* text-red-400 */
            font-size: 0.875rem; /* text-sm */
            margin-top: 0.25rem; /* mt-1 */
        }
    </style>
</head>
<body class="bg-dark-mode text-gray-200 antialiased">

    <nav class="bg-gray-800/80 backdrop-blur-md shadow-lg sticky top-0 z-50">
        <div class="max-w-6xl mx-auto px-4">
            <div class="flex justify-between items-center h-16">
                <a href="#" class="flex items-center space-x-2 text-white text-xl font-bold">
                    <img src="/image/CoreWebIcon.png" alt="Logo de CoreWeb" class="h-10 w-auto">
                    <span>CoreWeb</span>
                </a>
                <div class="hidden md:flex items-center space-x-6">
                    <a href="#inicio" class="text-gray-300 hover:text-brandPurple transition-colors duration-200">Inicio</a>
                    <a href="#servicios" class="text-gray-300 hover:text-brandPurple transition-colors duration-200">Servicios</a>
                    <a href="#proyectos" class="text-gray-300 hover:text-brandPurple transition-colors duration-200">Proyectos</a>
                    <a href="#contacto" class="bg-brandPurple text-white px-4 py-2 rounded-md font-medium hover:bg-purple-700 transition-colors duration-200">Contacto</a>
                </div>
                <div class="md:hidden">
                    <button id="mobile-menu-button" class="text-gray-300 hover:text-white focus:outline-none">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" /></svg>
                    </button>
                </div>
            </div>
        </div>
        <div id="mobile-menu" class="md:hidden hidden bg-gray-800">
            <a href="#inicio" class="block py-2 px-4 text-sm text-gray-300 hover:bg-gray-700">Inicio</a>
            <a href="#servicios" class="block py-2 px-4 text-sm text-gray-300 hover:bg-gray-700">Servicios</a>
            <a href="#proyectos" class="block py-2 px-4 text-sm text-gray-300 hover:bg-gray-700">Proyectos</a>
            <a href="#contacto" class="block py-2 px-4 text-sm text-gray-300 hover:bg-gray-700">Contacto</a>
        </div>
    </nav>

    <div class="max-w-6xl mx-auto p-4 md:p-8">

        <section id="inicio" class="my-16 scroll-mt-16">
            <div class="flex flex-col md:flex-row items-center gap-8 md:gap-12 bg-gray-800/50 p-8 rounded-lg shadow-xl backdrop-blur-sm">
                <div class="w-full md:w-1/2">
                    <img src="https://placehold.co/600x400/374151/E5E7EB?text=Imagen+Principal"
                         alt="Sobre Nosotros"
                         class="rounded-lg shadow-2xl object-cover w-full h-full aspect-video md:aspect-square">
                </div>
                <div class="w-full md:w-1/2">
                    <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Sobre Nosotros</h2>
                    <p class="text-gray-300 text-lg mb-6">
                        En progreso
                    </p>
                    <p class="text-gray-400 mb-8">
                        En progreso
                    </p>
                    <a href="#contacto" class="bg-brandPurple text-white px-6 py-3 rounded-md font-medium text-lg hover:bg-purple-700 transition-transform duration-200 inline-block">
                        Ponte en Contacto
                    </a>
                </div>
            </div>
        </section>

        <section id="proyectos" class="my-24 scroll-mt-16">
            <h2 class="text-3xl font-bold text-center text-white mb-12">Proyectos Destacados</h2>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">

                @foreach (var proyecto in Model.Proyectos)
                {
                    <a href="@proyecto.UrlProyecto" target="_blank" rel="noopener noreferrer"
                       class="block bg-gray-800 rounded-lg shadow-xl overflow-hidden transform hover:scale-105 transition-transform duration-300 ease-in-out">

                        <img src="@proyecto.ImagenUrl"
                             alt="@proyecto.NombreProyecto"
                             class="w-full h-48 object-cover">
                        <div class="p-6">
                            <h3 class="text-xl font-semibold text-white mb-2">@proyecto.NombreProyecto</h3>
                            <p class="text-gray-400 text-sm mb-4">@proyecto.Descripcion</p>

                            <div class="flex flex-wrap gap-2">
                                @if (!string.IsNullOrEmpty(proyecto.Tecnologias))
                                {
                                    @foreach (var tech in proyecto.Tecnologias.Split(','))
                                    {
                                        <span class="text-xs text-brandPurple bg-purple-900/50 px-2 py-1 rounded-full">@tech.Trim()</span>
                                    }
                                }
                            </div>
                        </div>
                    </a>
                }

                @if (Model.Proyectos.Count == 0)
                {
                    <p class="text-gray-400 text-center col-span-3">No hay proyectos para mostrar en este momento.</p>
                }

            </div>
        </section>

        <section id="contacto" class="my-24 scroll-mt-16">
            <div class="bg-gray-800/50 p-8 md:p-12 rounded-lg shadow-xl backdrop-blur-sm">
                <h2 class="text-3xl font-bold text-center text-white mb-10">Contacto</h2>

                <div class="flex flex-col md:flex-row gap-12">
                    <div class="w-full md:w-1/2">
                        <h3 class="text-2xl font-semibold text-white mb-4">Hablemos</h3>
                        <p class="text-gray-300 mb-6">
                            Estamos disponibles para cualquier consulta o propuesta de proyecto.
                            Rellena el formulario o contáctanos por nuestras redes.
                        </p>
                        <div class="space-y-4">
                            <div class="flex items-center space-x-3">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-brandPurple" viewBox="0 0 20 20" fill="currentColor"><path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" /><path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" /></svg>
                                <span class="text-gray-300">fernando.maldonado440@gmail.com</span>
                            </div>
                            <div class="flex items-center space-x-3">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-brandPurple" viewBox="0 0 20 20" fill="currentColor"><path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.06-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C6.477 18 2 13.523 2 8V3z" /></svg>
                                <span class="text-gray-300">+52 99-91-14-30-12</span>
                            </div>
                        </div>
                        <div class="flex space-x-4 mt-8">
                            <a href="#" class="text-gray-400 hover:text-brandBlue transition-colors">
                                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path></svg>
                            </a>
                            <a href="#" class="text-gray-400 hover:text-brandBlue transition-colors">
                                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path fill-rule="evenodd" d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" clip-rule="evenodd"></path></svg>
                            </a>
                        </div>
                    </div>

                    <div class="w-full md:w-1/2">
                        @if (!string.IsNullOrEmpty(Model.FormMessage))
                        {
                            <div class="bg-green-800/50 border border-green-600 text-green-200 px-4 py-3 rounded-md mb-6" role="alert">
                                @Model.FormMessage
                            </div>
                        }

                        <form method="post">
                            <div class="space-y-6">
                                <div>
                                    <label for="nombre" class="block text-sm font-medium text-gray-300 mb-1">Nombre</label>
                                    <input type="text" asp-for="ContactoForm.Nombre" class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-md text-gray-200 focus:outline-none focus:ring-2 focus:ring-brandPurple focus:border-transparent" placeholder="Tu nombre completo">
                                    <span asp-validation-for="ContactoForm.Nombre" class="validation-error"></span>
                                </div>
                                <div>
                                    <label for="email" class="block text-sm font-medium text-gray-300 mb-1">Email</label>
                                    <input type="email" asp-for="ContactoForm.Email" class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-md text-gray-200 focus:outline-none focus:ring-2 focus:ring-brandPurple focus:border-transparent" placeholder="tu@correo.com">
                                    <span asp-validation-for="ContactoForm.Email" class="validation-error"></span>
                                </div>

                                <div>
                                    <label for="asunto" class="block text-sm font-medium text-gray-300 mb-1">Asunto (Opcional)</label>
                                    <input type="text" asp-for="ContactoForm.Asunto" class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-md text-gray-200 focus:outline-none focus:ring-2 focus:ring-brandPurple focus:border-transparent" placeholder="Ej: Propuesta de proyecto">
                                    <span asp-validation-for="ContactoForm.Asunto" class="validation-error"></span>
                                </div>

                                <div>
                                    <label for="mensaje" class="block text-sm font-medium text-gray-300 mb-1">Mensaje</label>
                                    <textarea asp-for="ContactoForm.Mensaje" rows="5" class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-md text-gray-200 focus:outline-none focus:ring-2 focus:ring-brandPurple focus:border-transparent" placeholder="Escribe tu mensaje aquí..."></textarea>
                                    <span asp-validation-for="ContactoForm.Mensaje" class="validation-error"></span>
                                </div>
                                <div>
                                    <button type="submit" class="w-full bg-brandPurple text-white px-6 py-3 rounded-md font-medium text-lg hover:bg-purple-700 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-brandPurple focus:ring-offset-2 focus:ring-offset-gray-900">
                                        Enviar Mensaje
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>

    </div>

    <footer class="bg-gray-800 border-t border-gray-700/50 mt-24">
        <div class="max-w-6xl mx-auto px-4 py-6 text-center">
            <p class="text-gray-400 text-sm">
                &copy; 2025 CoreWeb. Todos los derechos reservados.
            </p>
            <a href="#" class="text-sm text-gray-500 hover:text-brandPurple transition-colors mt-2 inline-block">
                Iniciar Sesión (Admin)
            </a>
        </div>
    </footer>

    <script>
        document.getElementById('mobile-menu-button').addEventListener('click', function() {
            var menu = document.getElementById('mobile-menu');
            if (menu.classList.contains('hidden')) {
                menu.classList.remove('hidden');
            } else {
                menu.classList.add('hidden');
            }
        });

        document.querySelectorAll('#mobile-menu a').forEach(function(link) {
            link.addEventListener('click', function() {
                document.getElementById('mobile-menu').classList.add('hidden');
            });
        });
    </script>

    <partial name="_ValidationScriptsPartial" />

</body>
</html>